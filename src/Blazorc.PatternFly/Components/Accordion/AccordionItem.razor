@inherits Blazor.PatternFly.Components.Accordion.AccordionItemComponent

<dt>
    <h3>
        <button class="@(IsSelected ? ButtonExpandedClass : ButtonCollapsedClass)" aria-expanded="false" onclick=@(()=>OnItemClick())>
            <span class="pf-c-accordion__toggle-text">
                @Title
            </span>
            <i class="fas fa-angle-right pf-c-accordion__toggle-icon" aria-hidden="true"></i>
        </button>
    </h3>
</dt>
<dd class="@(IsSelected ? BodyExpandedClass : BodyCollapsedClass)" hidden="@(!IsSelected)">
    @if (ExpandedContentBody != null)
    {
        <div class="pf-c-accordion__expanded-content-body">
            @ExpandedContentBody
        </div>
    }
</dd>