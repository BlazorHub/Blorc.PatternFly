@inherits Blazorc.PatternFly.Components.Dropdown.DropdownToggleComponent

@using Blazorc.PatternFly.Components.Icon

@if (IsPlain)
{
    <span>
        <DynamicIcon Icon="@Icon" Class="pf-c-dropdown__toggle-icon" />
    </span>
}
else
{
    <span class="pf-c-dropdown__toggle-text">@ChildContent</span>
    <DynamicIcon Icon="@Icon" Class="pf-c-dropdown__toggle-icon" />
}