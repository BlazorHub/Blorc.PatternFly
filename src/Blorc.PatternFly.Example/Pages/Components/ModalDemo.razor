@code {
    private Modal simpleModal;

    private Modal smallModal;

    private Modal largeModal;

    private PleaseWaitModal pleaseWaitModal;

    private PleaseWaitModal pleaseWaitModalWithProgress;

    private PleaseWaitModal pleaseWaitModalWithProgressAndBody;

    private async Task DoSomething(ExecutionContext ctx)
    {
        int total = 100;
        for (int i = 0; i < total; i++)
        {
            int value = System.Convert.ToInt32(100.0d * i / total);

            if (ctx.State != null && ((bool)ctx.State))
            {
                await Task.Delay(10);
            }
            else
            {
                await ctx.Progress.ReportAsync(value);
            }
        }
    }
}